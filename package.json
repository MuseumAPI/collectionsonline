{
  "name": "collectionsonline",
  "version": "1.0.0",
  "description": "Science Museum Group : Collections Online",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "elasticsearch": "^11.0.1",
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "handlebars": "^4.0.5",
    "hapi": "^13.4.1",
    "hapi-negotiator": "https://github.com/TheScienceMuseum/hapi-negotiator.git",
    "inert": "^4.0.0",
    "joi": "^8.4.2",
    "rc": "^1.1.6",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browserify": "^13.0.1",
    "codecov": "^1.0.1",
    "cssnano": "^3.7.0",
    "istanbul": "^0.4.3",
    "node-sass": "^3.7.0",
    "nodemon": "^1.9.2",
    "npm-run-all": "^2.1.2",
    "postcss-cli": "^2.5.2",
    "pre-commit": "^1.1.3",
    "semistandard": "^8.0.0",
    "svg-sprite": "^1.3.1",
    "tape": "^4.5.1",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "postinstall": "run-s build minify",
    "start": "node bin/server.js",
    "test": "run-s test:*",
    "test:lint": "semistandard",
    "test:unit": "istanbul cover tape 'test/*.js'",
    "build": "run-p build:*",
    "build:js": "browserify src/assets/js/*.js -o public/bundle.js",
    "build:css": "node-sass src/assets/scss/main.scss public/bundle.css --include-path bower_components/foundation-sites/scss --include-path bower_components/slick-carousel/slick",
    "build:img": "cp src/assets/icons/* public/assets/icons",
    "build:svg": "svg-sprite --view --vscss --view-sprite=svg/sprite.view.svg --symbol --symbol-example --symbol-sprite=svg/sprite.symbol.svg --dest=public/assets/icons src/assets/icons/**/*.svg",
    "minify": "run-p minify:*",
    "minify:js": "uglifyjs public/bundle.js -o public/bundle.js",
    "minify:css": "postcss -u cssnano -i public/bundle.css -o public/bundle.css",
    "watch": "npm-run-all build --parallel watch:*",
    "watch:js": "watchify ./client.js -o public/bundle.js",
    "watch:css": "nodemon -e scss -x 'npm run build:css'",
    "watch:server": "nodemon --watch . --ignore node_modules/ --ignore public/ -e js -x 'npm start'"
  },
  "semistandard": {
    "ignore": [
      "src/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheScienceMuseum/collectionsonline.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TheScienceMuseum/collectionsonline/issues"
  },
  "homepage": "https://github.com/TheScienceMuseum/collectionsonline"
}
